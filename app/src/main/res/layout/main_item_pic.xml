<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_item_tx"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/tab_white">

    <ImageView
        android:id="@+id/news_fragment_user_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/news_fragment_user_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/news_fragment_user_img"
        tools:text="小小咪" />

    <TextView
        android:id="@+id/news_fragment_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_fragment_user_img"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/news_fragment_content_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/news_fragment_content_text"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp" />

    <LinearLayout
        android:id="@+id/news_fragment_comments_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_fragment_content_img"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/news_fragment_commentNum_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#974c3b"
            tools:text="12" />

        <TextView
            android:id="@+id/news_fragment_funNum_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#974c3b"
            tools:text="12" />

    </LinearLayout>

