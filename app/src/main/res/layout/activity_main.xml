<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red">

        <TextView
            android:id="@+id/main_tx_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:text="登陆"
            android:textColor="#ffffff" />

        <EditText
            android:hint="搜你想搜的"
            android:textSize="14sp"
            android:paddingLeft="12dp"
            android:id="@+id/main_tx_input"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="6dp"
            android:layout_toLeftOf="@+id/main_tx_more"
            android:layout_toRightOf="@+id/main_tx_login"
            android:background="@drawable/main_search_bg" />

        <TextView
            android:id="@+id/main_tx_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:text="更多"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/main_magic_indicator"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" />


    <android.support.v4.view.ViewPager

        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v4.view.ViewPager>

</LinearLayout>